{
  "manifest_version": 3,
  "name": "Přepínač Akcí Rozšíření (CS)",
  "version": "1.0",
  "description": "Rozšíření pro demonstraci přepínání akcí přes kontextové menu.",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Klikněte pro spuštění zvolené akce"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}